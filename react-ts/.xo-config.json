{
  "extends": [
    "xo-react"
  ],
  "ignores": [
    "src/vite-env.d.ts"
  ],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "pascalCase": true,
          "camelCase": true
        }
      }
    ],
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function"
      }
    ],
    "n/file-extension-in-import": "off",
    "import/extensions": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "max-params": [
      "error",
      2
    ]
  },
  "prettier": true
}